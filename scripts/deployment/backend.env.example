# Club Corra Backend Environment Variables (Production)
# Copy this file to /opt/club-corra-api/.env on your EC2 instance

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=8080
HOST=127.0.0.1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DB_SSL=true

# Alternative database configuration (if not using DATABASE_URL)
DB_HOST=your-db-host.amazonaws.com
DB_PORT=5432
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_NAME=club_corra_production

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# JWT Expiration (in seconds)
JWT_EXPIRES_IN=86400

# Password hashing rounds
BCRYPT_ROUNDS=12

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGIN=https://admin.clubcorra.com,https://clubcorra.com,https://*.clubcorra.com,https://*.vercel.app,https://club-corra-pilot-admin.vercel.app

# ===========================================
# AWS S3 CONFIGURATION
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=club-corra-uploads
S3_BUCKET_REGION=us-east-1

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@clubcorra.com

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ===========================================
# FILE UPLOAD LIMITS
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================
WS_PORT=8081
WS_PATH=/socket.io

# ===========================================
# REDIS CONFIGURATION (Optional - for caching)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# EXTERNAL API KEYS (Optional)
# ===========================================
# Google Maps API Key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Stripe API Keys (for payments)
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key

# ===========================================
# DEVELOPMENT/DEBUG SETTINGS
# ===========================================
# Enable debug mode (set to false in production)
DEBUG=false

# Enable API documentation
ENABLE_SWAGGER=false

# ===========================================
# SSL/HTTPS CONFIGURATION
# ===========================================
# Set to true if running behind nginx with SSL
HTTPS_MODE=false

# SSL certificate paths (if running with SSL directly)
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# ===========================================
# HEALTH CHECK CONFIGURATION
# ===========================================
HEALTH_CHECK_PATH=/api/v1/health
HEALTH_CHECK_INTERVAL=30000

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=club-corra-backups
